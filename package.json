{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/main.js",
    "start:dev": "dotenv -e .env.development -- nest start --watch",
    "start:dev:local": "dotenv -e .env.development -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    
    "db:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "db:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "db:migrate:deploy": "dotenv -e .env.development -- prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed:dev": "dotenv -e .env.development -- tsx prisma/import-all-data-from-excel.ts",
    "db:studio:dev": "dotenv -e .env.development -- prisma studio",
    "db:reset:dev": "dotenv -e .env.development -- prisma migrate reset",
    
    "import:users": "ts-node ./prisma/import-users-from-excel.ts",
    
    "build:vercel": "prisma generate && nest build",
    "start:vercel": "node dist/src/main.js",
    
    "fly:setup": "export FLYCTL_INSTALL=\"/home/hoangdanh2000/.fly\" && export PATH=\"$FLYCTL_INSTALL/bin:$PATH\"",
    "fly:login": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly auth login",
    "deploy": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly deploy --strategy immediate",
    "deploy:staging": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly deploy --config fly.staging.toml",
    
    "logs": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly logs",
    "logs:live": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly logs --follow",
    "ssh": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly ssh console",
    "fly:status": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly status",
    "fly:secrets": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly secrets list",
    "fly:restart": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly apps restart weekly-report-backend",
    
    "fly:migrate": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly ssh console -C 'cd /app && npx prisma migrate deploy'",
    "fly:seed": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly ssh console -C 'cd /app && npx tsx prisma/seed.ts'",
    "fly:db-proxy": "export PATH=\"/home/hoangdanh2000/.fly/bin:$PATH\" && fly proxy 5433:5432 -a weekly-report-backend-db",
    
    "db:connect": "./scripts/db-connect.sh",
    "db:studio": "./scripts/prisma-studio.sh", 
    "db:ops": "./scripts/db-operations.sh",
    "db:proxy": "./scripts/db-connect.sh",
    "db:setup": "./scripts/quick-setup.sh",
    "db:info": "./scripts/db-info.sh",
    
    "import:local": "dotenv -e .env.development -- tsx prisma/import-all-data-from-excel.ts",
    "import:production": "./scripts/import-data-production.sh",
    "reset:local": "./scripts/reset-and-import.sh local",
    "reset:production": "./scripts/reset-and-import.sh production",
    
    "health": "curl -f https://weekly-report-backend.fly.dev/health",
    "health:api": "curl -f https://weekly-report-backend.fly.dev/api/health",
    "health:db": "curl -f https://weekly-report-backend.fly.dev/api/health/db",
    "test:login": "curl -X POST https://weekly-report-backend.fly.dev/api/auth/login -H 'Content-Type: application/json' -d '{\"employeeCode\":\"CEO001\",\"password\":\"123456\"}' -v",
    
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs postgres",
    "docker:logs:follow": "docker-compose logs -f postgres",
    "docker:status": "docker ps",
    "docker:clean": "docker-compose down -v",
    "docker:tools": "docker-compose --profile tools up -d",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    
    "dev:setup": "pnpm docker:up && sleep 10 && pnpm db:migrate && pnpm db:seed:dev",
    "dev:full": "pnpm dev:setup && pnpm start:dev",
    "dev:reset": "pnpm docker:reset && sleep 15 && pnpm db:migrate && pnpm db:seed:dev"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.10.1",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.0",
    "dotenv-cli": "^7.4.4",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^6.10.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.35.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}